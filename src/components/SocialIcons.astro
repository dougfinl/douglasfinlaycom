---
import { Icon } from 'astro-icon/components';
import { SOCIALS } from '../config';

export interface Props {
    size?: number;
}

const { size } = Astro.props;
---

<div>
    <ul>
        {
            Object.values(SOCIALS).map((socialItem) => (
                <li class='inline-block mx-2 transition hover:scale-125'>
                    <a href={socialItem.url} aria-label={socialItem.label}>
                        <Icon name={socialItem.icon} size={size} />
                    </a>
                </li>
            ))
        }
    </ul>
</div>
